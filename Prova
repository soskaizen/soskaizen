  <script>
    // Domande e opzioni, ogni risposta ha un punteggio
    const questions = [
      {
        text: "A che ora vai a dormire?",
        options: [
          { answer: "Prima di mezzanotte", score: 0 },
          { answer: "Verso le 2", score: 1 },
          { answer: "Non dormo mai üòÇ", score: 2 }
        ]
      },
      {
        text: "Cosa fai la mattina appena svegli?",
        options: [
          { answer: "Colazione sana e acqua", score: 0 },
          { answer: "Controllo il telefono", score: 1 },
          { answer: "Torno a dormire", score: 2 }
        ]
      },
      {
        text: "Come trascorri il weekend?",
        options: [
          { answer: "Sport e aria aperta", score: 0 },
          { answer: "Netflix & relax", score: 1 },
          { answer: "Festa tutta la notte!", score: 2 }
        ]
      }
    ];

    // Risultati personalizzati in base al punteggio
    const results = [
      { badge: "üë∂", text: "Baby Face! Sembri 18 anni" },
      { badge: "üåü", text: "Golden Vibes! Sembri 25 anni" },
      { badge: "üï∂Ô∏è", text: "Mister Adulting! Sembri 30+" }
    ];

    let currentQuestion = 0;
    let totalScore = 0;
    let finalResult = "";

    function showQuestion() {
      const q = questions[currentQuestion];
      let html = `<div class=\"question\">${currentQuestion + 1}. ${q.text}</div>`;
      q.options.forEach((opt, idx) => {
        html += `<button onclick=\"choose(${idx})\">${opt.answer}</button>`;
      });
      document.getElementById("quiz").innerHTML = html;
      document.getElementById("quiz").style.display = "block";
      document.getElementById("result").style.display = "none";
      document.getElementById("after").style.display = "none";
    }

    function choose(idx) {
      totalScore += questions[currentQuestion].options[idx].score;
      currentQuestion++;
      if (currentQuestion < questions.length) {
        showQuestion();
      } else {
        showResult();
      }
    }

    function showResult() {
      document.getElementById("quiz").style.display = "none";
      let resIdx = totalScore <= 2 ? 0 : totalScore <= 4 ? 1 : 2;
      let result = results[resIdx];
      finalResult = result.badge + ' ' + result.text;
      document.getElementById("result").innerHTML = `<div class=\"badge\">${result.badge}</div> ${result.text}`;
      document.getElementById("result").style.display = "block";
      document.getElementById("after").style.display = "block";
    }

    // Mock share functions (WhatsApp OK, le altre sono placeholder)
    function shareWA() {
      window.open(`https://wa.me/?text=Ho fatto il test e il risultato √®: ${finalResult} üëâ prova anche tu!`, "_blank");
    }
    function shareInsta() {
      alert("Per Instagram puoi generare un'immagine del risultato e caricarla come story.");
    }
    function shareTikTok() {
      alert("Per TikTok si pu√≤ generare un'immagine/video scaricabile e postarlo.");
    }

    // Avvia quiz
    showQuestion();
  </script>
