  <script>
    const results = [
      "👶 Baby Face! Sembri 18 anni",
      "🌟 Golden Vibes! Sembri 25 anni",
      "🕶️ Mister Adulting! Sembri 30+"
    ];
    let finalResult = "";
    function nextQuestion(choice) {
      document.getElementById("quiz").style.display = "none";
      document.getElementById("result").style.display = "block";
      document.getElementById("after").style.display = "block";
      finalResult = results[choice];
      document.getElementById("result").innerHTML = `<div class="badge">${finalResult.split(" ")[0]}</div> ${finalResult}`;
    }

    // Mock share functions (funzionano già con WhatsApp, le altre richiedono API/deep link)
    function shareWA() {
      window.open(`https://wa.me/?text=Ho fatto il test e il risultato è: ${finalResult} 👉 prova anche tu!`, "_blank");
    }
    function shareInsta() {
      alert("Per Instagram puoi generare un'immagine del risultato e caricarla come story.");
    }
    function shareTikTok() {
      alert("Per TikTok si può generare un'immagine/video scaricabile e postarlo.");
    }
  </script>
